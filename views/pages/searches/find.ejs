<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../partials/layout/head') %>
    <link rel="stylesheet" href="/css/SMACSS/modules/search-doctor-module.css">
    <title>Find a Doctor</title>
</head>

<body>
    <header>

        <%- include('../../partials/layout/header') %>
    </header>
    <main>
        <section id="docSearchForm">
            <form action="/searches" method="post">

                <input type="text" name="location" placeholder="Enter Location" required>

                <select type="text" name="speciality" placeholder="Enter Speciality" required>
                    <option value="Dental">Dental</option>
                    <option value="Ophthalmology">Ophthalmology / Eye Care</option>
                    <option value="Orthopedic">Orthopedic</option>
                    <option value="Oncologist">Oncologist</option>

                </select>

                <input type="time" name="time" placeholder="Enter Time" required>

                <input type="date" name="date" placeholder="Enter Date" required>

                <button type="submit" id="submit" value="search">Search</button>
            </form>
        </section>

    </main>
    <footer>

        <%- include('../../partials/layout/footer') %>
    </footer>
</body>

</html>